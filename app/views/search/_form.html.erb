<!-- Search field -->
<div class="small-8 large-10 columns ">
  <%= form_tag(search_books_path, method: :get) do %>
    <%= label_tag(:query, "Search for:") %>
    <%= text_field_tag(:query) %>
    <%= label_tag(:search, "Search on:") %><br />
    <%= radio_button_tag('search', 'titles', true) %>
    <%= label_tag(:search, "Titles", value: 'titles') %>
    <%= radio_button_tag('search', 'content') %>
    <%= label_tag(:search, "Content", value: 'content') %>
    <%= radio_button_tag('search', 'titles_and_content') %>
    <%= label_tag(:search, "Titles and content", value: 'titles_and_content') %>
    <%= submit_tag("Search") %>
  <% end %>
</div>
